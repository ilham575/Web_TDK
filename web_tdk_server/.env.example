# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/tadika_db

# For Google Cloud SQL MySQL:
# DATABASE_URL=mysql+pymysql://user:password@/db?unix_socket=/cloudsql/project:region:instance

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=True
CORS_ORIGINS=*

# Production CORS Origins (comma-separated)
# CORS_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# Database connection example:
# For local MySQL: mysql+pymysql://root:password@localhost/tadika_db
# For remote MySQL: mysql+pymysql://user:pass@host:port/database
# For Cloud SQL: mysql+pymysql://user:pass@/db?unix_socket=/cloudsql/project:region:instance

# Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"